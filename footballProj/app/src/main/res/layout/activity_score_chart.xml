<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".ScoreChart">

    <TextView
        android:id="@+id/placeHeadLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/duru_sans"
        android:text="#"
        android:textAlignment="center"
        android:textColor="#00296b"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/teamsGoalsListView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/teamHeadLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="210dp"
        android:fontFamily="@font/duru_sans"
        android:text="TEAM"
        android:textAlignment="center"
        android:textColor="#00296b"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/goalsHeadLine"
        app:layout_constraintStart_toStartOf="@id/placeHeadLine" />


    <TextView
        android:id="@+id/goalsHeadLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/duru_sans"
        android:paddingRight="36dp"
        android:text="GOALS"
        android:textColor="#00296b"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/teamsGoalsListView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/teamsGoalsListView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="112dp"
        app:srcCompat="@drawable/background"
        android:scaleType="fitXY"
        android:alpha="0.2"
        />




    <ListView
        android:id="@+id/teamsGoalsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        android:alpha="0.9"
        android:paddingTop="25dp"

        />

</RelativeLayout>